<Window x:Class="TrackIt.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TrackIt" Height="400" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Títol de l'aplicació -->
        <TextBlock Text="TrackIt" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10"/>

        <!-- Contingut del menú principal -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Expense" Width="250" Height="50" FontSize="16" />
            <Button Content="Income" Width="250" Height="50" FontSize="16" Margin="0,20,0,0"/>
            <Button Content="Reports" Width="250" Height="50" FontSize="16" Margin="0,20,0,0"/>
            <Button Content="Summary" Width="250" Height="50" FontSize="16" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
