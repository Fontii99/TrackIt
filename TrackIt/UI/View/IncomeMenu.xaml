<Window x:Class="TrackIt.IncomeMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TrackIt - Income" Height="518" Width="618" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Títol de l'aplicació -->
        <TextBlock Text="Add Income" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
        <!-- Formulari d'entrada -->
        <StackPanel Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="40,0,40,0" Width="520">
            <!-- Descripció de l'ingrés -->
            <TextBlock Text="Description" FontSize="14" Margin="0,0,0,5"/>
            <TextBox Name="DescriptionTextBox" Height="40" FontSize="16" BorderBrush="Gray" BorderThickness="1" Padding="10,5"
                     HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Margin="0,0,0,10"/>

            <!-- Import de l'ingrés -->
            <TextBlock Text="Amount" FontSize="14" Margin="0,0,0,5"/>
            <TextBox Name="AmountTextBox" Height="40" FontSize="16" BorderBrush="Gray" BorderThickness="1" Padding="10,5"
                     HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Margin="0,0,0,10"/>

            <!-- Grid per Data i Categoria -->
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="245"/>
                    <ColumnDefinition Width="245"/>
                </Grid.ColumnDefinitions>

                <!-- Data de l'ingrés -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Date" FontSize="14" Margin="0,0,0,5"/>
                    <DatePicker Name="IncomeDatePicker" Height="40" FontSize="16" BorderBrush="Gray" BorderThickness="1"
                               VerticalContentAlignment="Center" HorizontalContentAlignment="Left"/>
                </StackPanel>

                <!-- Categoria de l'ingrés -->
                <StackPanel Grid.Column="1" Margin="30,0,-30,0">
                    <TextBlock Text="Category" FontSize="14" Margin="0,0,0,5"/>
                    <ComboBox Name="CategoryComboBox" Height="40" FontSize="16" BorderBrush="Gray" BorderThickness="1" Padding="10,5"
                             HorizontalContentAlignment="Left" VerticalContentAlignment="Center">
                        <ComboBoxItem Content="Salary"/>
                        <ComboBoxItem Content="Business"/>
                        <ComboBoxItem Content="Investment"/>
                        <ComboBoxItem Content="Others"/>
                    </ComboBox>
                </StackPanel>
            </Grid>

            <!-- Checkbox per ingressos recurrents -->
            <CheckBox Name="RecurringCheckBox" Content="Recurring Income" FontSize="14" Margin="0,5,0,10"
                      Checked="RecurringCheckBox_Checked" Unchecked="RecurringCheckBox_Unchecked"/>

            <!-- Elements que seran visibles només si és recurrent -->
            <StackPanel Name="RecurringPanel">
                <TextBlock Text="Period" FontSize="14" Margin="0,0,0,5"/>
                <ComboBox x:Name="PeriodComboBox" Width="245" Height="40" FontSize="16" BorderBrush="Gray" BorderThickness="1" Padding="10,5"
                          HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Margin="0,0,0,20" HorizontalAlignment="Left" IsEnabled="False">
                    <ComboBoxItem Content="Day"/>
                    <ComboBoxItem Content="1 Month"/>
                    <ComboBoxItem Content="3 Months"/>
                    <ComboBoxItem Content="6 Months"/>
                    <ComboBoxItem Content="Year"/>
                </ComboBox>
            </StackPanel>

            <!-- Botons de desar i cancel·lar -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Save Income" Width="100" Height="50" FontSize="16" Background="#4CAF50" Foreground="White" 
                        BorderBrush="Green" BorderThickness="1" Margin="0,0,10,0" Click="SaveButton_Click"/>
                <Button Content="Cancel" Width="100" Height="50" FontSize="16" Background="#F44336" Foreground="White" 
                        BorderBrush="Red" BorderThickness="1" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
