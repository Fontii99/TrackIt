<Window x:Class="TrackIt.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TrackIt" Height="400" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Títol de l'aplicació -->
        <TextBlock Text="TrackIt" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10"/>
        <!-- Contingut del menú principal -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button x:Name="ExpenseButton" Content="Expense" Width="250" Height="50" FontSize="16" Click="ExpenseButton_Click" />
            <Button x:Name="IncomeButton" Content="Income" Width="250" Height="50" FontSize="16" Margin="0,20,0,0" Click="IncomeButton_Click" />
            <Button x:Name="ReportsButton" Content="Reports" Width="250" Height="50" FontSize="16" Margin="0,20,0,0" />
            <Button x:Name="SummaryButton" Content="Summary" Width="250" Height="50" FontSize="16" Margin="0,20,0,0" Click="SummaryButton_Click" />
        </StackPanel>
    </Grid>
</Window>